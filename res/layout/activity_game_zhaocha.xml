<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud" >

    <RelativeLayout
        android:id="@+id/activity_game_zhaocha_header"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/activity_game_zhaocha_time_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="游戏时间："
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/activity_game_zhaocha_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_game_zhaocha_time_lable"
            android:layout_alignBottom="@+id/activity_game_zhaocha_time_lable"
            android:layout_toRightOf="@+id/activity_game_zhaocha_time_lable"
            android:text="00分00秒"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/activity_game_zhaocha_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/list_selector_holoblue_alpha"
            android:text="重新开始"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_game_zhaocha_main_layout"
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:layout_below="@+id/activity_game_zhaocha_header"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/activity_game_zhaocha_main_img"
            android:layout_width="300dp"
            android:layout_height="310dp"
            android:src="@drawable/zhaocha" />
    </RelativeLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:padding="10dp"
        android:text="@string/remind_tip_lite"
        android:textColor="@color/main_backgroud" />

</RelativeLayout>